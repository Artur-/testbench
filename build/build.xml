<?xml version="1.0"?>

<project name="Testing Tools build" basedir="." default="package">
	<tstamp />
	<property name="version" value="${DSTAMP}${TSTAMP}"/>

	<target name="package">
		<mkdir dir="output" />
		<jar jarfile="output/testingtools-2.0-${version}.jar" compress="true">
			<manifest>
				<attribute name="Class-Path" value="junit-4.5.jar selenium-java-client-driver.jar js.jar" />
			</manifest>
			<fileset dir="../bin">
			</fileset>
			<!--
			<fileset dir="../lib">
				<patternset>
					<exclude name="*-src.jar" />
					<exclude name="*-sources.jar" />
				</patternset>
			</fileset>
			-->
		</jar>
		
		<zip destfile="output/testingtools-2.0-${version}.zip">
			<fileset dir="../doc" includes="INSTALL.TXT"/>
			<fileset dir="output" includes="testingtools-2.0-${version}.jar"/>
			<fileset dir=".." includes="selenium-extensions/**" />
			<fileset dir=".." includes="lib/commons-io-* lib/js.jar lib/junit*.jar lib/selenium-java-client*" excludes="lib/**-source* lib/**-src*"/>
			<fileset dir=".." includes="example/test.xml example/tests/**"/>
				
		</zip>
		
	</target>


</project>
